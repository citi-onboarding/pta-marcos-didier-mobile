// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  age       Int
}

model Test {
  id   Int    @id @default(autoincrement())
  name String
  age  Int
}

enum Especies {
  Bode
  Gato
  Porco
  Girafa
  Cavalo
  Cachorro
}

enum TipoConsulta {
  PrimeiraConsulta
  Retorno
  CheckUp
  Vacinacao
}

model Paciente {
  id Int @id @default(autoincrement())
  genero String
  idade Int
  especie Especies
  nomeDono String
  nomeDoAnimal String

  consulta Consulta[]// array de consultas para fazer o relacionamento
}

model Consulta {
  id Int @id @default(autoincrement())
  medico String
  descricao String
  tipo TipoConsulta
  data String
  hora String
  idPaciente Int
  paciente Paciente @relation(fields: [idPaciente], references: [id])// relaciona uma consulta especifica a um paciente
}